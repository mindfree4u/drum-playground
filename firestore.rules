rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
        function cors() {
      			return request.headers['Origin'] == "http://localhost:3000"
      		|| request.headers['Origin'] == "https://drum-playground.firebaseapp.com"
          || request.headers['Origin'] == "https://drum-playgroung.web.app"
          || request.headers['Origin'] == "https://ddf.kro.kr"
          || request.headers['Origin'] == "https://www.ddf.kro.kr"
          || request.headers['Origin'] == "https://ddfoo.co.kr"
          || request.headers['Origin'] == "https://www.ddfoo.co.kr";
    }
      allow read, write: if true;
      allow create: if cors();
      allow update: if cors();
      allow delete: if cors();
    }
  }
}
